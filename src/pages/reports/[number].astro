---
import BaseLayout from '../../layouts/base-layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const reports = await getCollection('reports');
  return reports.map((report) => ({
    params: { number: report.data.number },
    props: { report },
  }));
}

const { report } = Astro.props;
const { Content } = await render(report);

const format_date = (date_str: string) => {
  const d = new Date(date_str + 'T00:00:00');
  return d.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<BaseLayout title={`Lab Report #${report.data.number}: ${report.data.title} â€” ScoutOS Labs`}>
  <article class="report">
    <header class="report-header">
      <div class="report-header-inner">
        <div class="report-classification">
          <span class="classification-label">Lab Report</span>
          <span class="classification-number">#{report.data.number}</span>
        </div>

        <h1 class="report-title">{report.data.title}</h1>

        <div class="report-meta-row">
          <time datetime={report.data.date}>{format_date(report.data.date)}</time>
          <span class="meta-divider">|</span>
          <span>ScoutOS Labs</span>
        </div>

        {report.data.highlights.length > 0 && (
          <div class="report-highlights">
            <div class="highlights-label">Key Points</div>
            <ul class="highlights-list">
              {report.data.highlights.map((h: string) => (
                <li>
                  <span class="hl-marker">&rsaquo;</span>
                  {h}
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
    </header>

    <div class="report-content">
      <Content />
    </div>

    <footer class="report-nav">
      <a href="/reports/" class="nav-back">&larr; All Reports</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .report {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  /* === Header === */
  .report-header {
    padding: var(--space-2xl) 0 var(--space-xl);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-xl);
  }

  .report-classification {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
  }

  .classification-label {
    color: var(--color-text-muted);
  }

  .classification-number {
    color: var(--color-green);
    padding: 0.1em 0.5em;
    border: 1px solid rgba(78, 205, 196, 0.3);
    border-radius: 2px;
  }

  .report-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    margin-bottom: var(--space-md);
    line-height: 1.1;
  }

  .report-meta-row {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .meta-divider {
    opacity: 0.3;
  }

  /* === Highlights === */
  .report-highlights {
    margin-top: var(--space-lg);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    padding: var(--space-lg);
  }

  .highlights-label {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-md);
  }

  .highlights-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .highlights-list li {
    font-size: 0.9rem;
    color: var(--color-text);
    display: flex;
    gap: var(--space-sm);
  }

  .hl-marker {
    color: var(--color-green);
    font-weight: 700;
    flex-shrink: 0;
  }

  /* === Content === */
  .report-content {
    padding: var(--space-lg) 0;
  }

  .report-content :global(h2) {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-sm);
    border-bottom: 1px solid var(--color-border);
  }

  .report-content :global(h3) {
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .report-content :global(p) {
    margin-bottom: var(--space-md);
  }

  .report-content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--space-xl) 0;
  }

  .report-content :global(em) {
    color: var(--color-text-muted);
  }

  .report-content :global(strong) {
    color: var(--color-text-bright);
    font-weight: 600;
  }

  .report-content :global(ul), .report-content :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .report-content :global(li) {
    margin-bottom: var(--space-xs);
  }

  .report-content :global(blockquote) {
    border-left: 2px solid var(--color-green);
    padding-left: var(--space-md);
    color: var(--color-text-muted);
    font-style: italic;
    margin-bottom: var(--space-md);
  }

  /* === Nav === */
  .report-nav {
    padding: var(--space-xl) 0;
    border-top: 1px solid var(--color-border);
    margin-top: var(--space-xl);
  }

  .nav-back {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-back:hover {
    color: var(--color-green);
  }
</style>
